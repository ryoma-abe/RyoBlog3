---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { formatDate } from "../lib/utils/utils";
import { getTagColor } from "../lib/utils/tags";

// 1. 生成するページのパスを定義
export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");

  return blogEntries.map((entry) => ({
    params: {
      // ファイル名をスラッグとして使用（blog/post-1.md → post-1）
      slug: entry.id
        .replace("blog/", "")
        .replace(".md", "")
        .replace(".mdx", ""),
    },
    props: { entry },
  }));
}

// 2. このページテンプレートでは、propsから渡されたentryが使用できます
const { entry } = Astro.props;
const { Content } = await entry.render();

// デバッグ用
console.log(`記事スラッグ: ${Astro.params.slug}`);
console.log(`記事ID: ${entry.id}`);
---

<Layout title={entry.data.title}>
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <article class="prose dark:prose-invert lg:prose-lg mx-auto">
      <div class="mb-8">
        <h1 class="text-4xl font-bold mb-2">{entry.data.title}</h1>
        <div class="flex items-center justify-between mb-8">
          <div class="flex gap-2 flex-wrap">
            {
              entry.data.tags.map((tag) => (
                <span
                  class={`text-sm px-3 py-1 rounded-full ${getTagColor(tag)} text-white`}
                >
                  {tag}
                </span>
              ))
            }
          </div>
          <time class="text-gray-500">
            {
              formatDate(
                entry.data.date instanceof Date
                  ? entry.data.date.toISOString()
                  : String(entry.data.date)
              )
            }
          </time>
        </div>
        {
          entry.data.description && (
            <p class="text-xl text-gray-600 mt-4">{entry.data.description}</p>
          )
        }
      </div>

      <div class="markdown-content">
        <Content />
      </div>

      <div class="mt-12 pt-6 border-t">
        <a href="/" class="text-blue-500 hover:underline">← 記事一覧に戻る</a>
      </div>
    </article>
  </main>
</Layout>
