---
// components/Figure.astro
import { Image } from "astro:assets";

export interface Props {
  src: string;
  alt?: string;
  caption?: string;
  className?: string;
}

const { src, alt = "", caption, className = "" } = Astro.props;
---

<figure class={`my-6 text-center ${className}`}>
  <Image
    src={src}
    alt={alt}
    width={800}
    height={600}
    format="webp"
    quality="high"
    class="mx-auto rounded shadow"
  />
  {
    caption && (
      <figcaption class="mt-2 text-sm text-gray-500">{caption}</figcaption>
    )
  }
</figure>
