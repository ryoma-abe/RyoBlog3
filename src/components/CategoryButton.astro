---
// カテゴリーデータを取得する（実際のデータ取得方法に合わせて調整してください）
const categories = [
  { id: "all", name: "すべて" },
  { id: "frontend", name: "フロントエンド" },
  { id: "shopify", name: "Shopify" },
  { id: "javascript", name: "JavaScript" },
  { id: "css", name: "CSS" },
];
---

<div class="w-fit mx-auto">
  <h1 class="text-center text-4xl">フロントエンドとShopifyの備忘録</h1>
  <ul class="flex flex-wrap gap-2 w-fit mx-auto mt-5">
    {
      categories.map((category) => (
        <li>
          <button class="p-2 cursor-pointer hover:border-b">
            {category.name}
          </button>
        </li>
      ))
    }
  </ul>
</div>
